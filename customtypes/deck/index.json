{
  "format": "page",
  "id": "deck",
  "label": "Deck",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "",
          "allowTargetBlank": true,
          "single": "heading1,strong,em"
        }
      },
      "theme": {
        "type": "Select",
        "config": {
          "label": "Theme",
          "placeholder": "Slide theme color",
          "options": ["white", "orange", "pink", "green", "purple", "blue"],
          "default_value": "white"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "company": {
              "type": "SharedSlice"
            },
            "sales_process": {
              "type": "SharedSlice"
            },
            "pricing": {
              "type": "SharedSlice"
            },
            "offer": {
              "type": "SharedSlice"
            },
            "features": {
              "type": "SharedSlice"
            },
            "testimonials": {
              "type": "SharedSlice"
            },
            "resources": {
              "type": "SharedSlice"
            },
            "references": {
              "type": "SharedSlice"
            },
            "agenda": {
              "type": "SharedSlice"
            },
            "value_proposition": {
              "type": "SharedSlice"
            },
            "product": {
              "type": "SharedSlice"
            },
            "methodology": {
              "type": "SharedSlice"
            },
            "leads_goals": {
              "type": "SharedSlice"
            },
            "intro_slide": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "Config": {
      "company_name": {
        "type": "Text",
        "config": {
          "label": "Company name",
          "placeholder": ""
        }
      },
      "company_logo": {
        "type": "Image",
        "config": {
          "label": "Company Logo",
          "constraint": {},
          "thumbnails": []
        }
      },
      "company_domain": {
        "type": "Group",
        "config": {
          "label": "Company domain",
          "repeat": true,
          "fields": {
            "domain": {
              "type": "Text",
              "config": {
                "label": "Domain",
                "placeholder": "example : prismic.io"
              }
            }
          }
        }
      },
      "author": {
        "type": "Link",
        "config": {
          "label": "Author",
          "select": "document",
          "customtypes": ["author"]
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    },
    "Access": {
      "activate_password": {
        "type": "Boolean",
        "config": {
          "label": "Activate Password",
          "default_value": false,
          "placeholder_true": "true",
          "placeholder_false": "false"
        }
      },
      "password": {
        "type": "Text",
        "config": {
          "label": "Password",
          "placeholder": ""
        }
      }
    }
  }
}
